.container
    ul.ul.nav.nav-pills.pull-left
        li.col-sm-12.pull-left
            .navbar-brand Profile
.container
    .well
        form.form-horizontal(name="profileForm")
          fieldset
            .form-group
              label.col-md-2.control-label(for="username") User name
              .col-md-10
                input.form-control(name="username", type="text", placeholder="User name", ng-model="username", readonly)
            .form-group
              label.col-md-2.control-label(for="fname") First Name
              .col-md-10
                input.form-control(name="fname", type="text", placeholder="First Name", ng-model="fname", required)
            .form-group
              label.col-md-2.control-label(for="lname") Last Name
              .col-md-10
                input.form-control(name="lname", type="text", placeholder="Last Name", ng-model="lname", required)
            .form-group
              label.col-md-2.control-label(for="password") Password
              .col-md-10
                input.form-control(name="password", type="password", placeholder="Password", ng-model="password")
            .form-group
                label.col-md-2.control-label(for="verifyPassword") Verify Password
                .col-md-10
                    input.form-control(name="verifyPassword", type="password", placeholder="Verify Password", ng-model="verifyPassword")

            .form-group
              .col-md-10.col-md-offset-2
                .pull-right
                  button.btn.btn-primary(ng-click="update()", ng-disabled="signupForm.$invalid") Submit
                  | &nbsp;
                  a.btn.btn-default(href="/") Cancel
