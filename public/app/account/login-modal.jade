.container-fluid(ng-controller="NavBarLoginController")
    .col-md-3
    .well.well-sm.col-md-6
        h4 Sign In
        form.form-horizontal(name="signInForm")
            fieldset
                .form-group
                    label.col-md-3.control-label(for="userName") User name
                    .col-md-9
                        input.form-control(id="userName" name="userName", type="text", placeholder="User name", ng-model="username")
                .form-group
                    label.col-md-3.control-label(for="password") Password
                    .col-md-9
                        input.form-control(name="password", type="password", placeholder="Password", ng-model="password")
                .form-group
                    .col-md-9.col-md-offset-3
                        .pull-right
                            button.btn.btn-primary(ng-click="signin()") Sign In
    .col-md-3

