.container.top-padding-med
    .navbar.navbar-invers
        .container
            .navbar-header
                .navbar-brand Families
            .navbar-collapse.collapse
                ul.nav.navbar-nav.pull-left
                    li
                        a.btn.btn-md(href="/clients/new" ng-click="new()") New
                ul.nav.navbar-nav.pull-right
                    li
                        input.form-control(ng-model="searchText", placeholder="Filter")
                    li
                        select.form-control(ng-model="sortOrder", ng-options="item.value as item.text for item in sortOptions")

    table.table.table-hover.table-striped.table-condensed
        thead
            tr
                th Name
        tbody
            tr(ng-repeat="client in clients | filter:searchText | orderBy:sortOrder")
                td
                    a(href="/clients/{{client._id}}") {{client.lastName + ', ' + client.firstName}}
