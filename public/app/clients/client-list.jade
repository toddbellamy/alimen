.container
    .navbar
        .navbar-header
            .navbar-brand Clients
        .navbar-collapse.collapse
            ul.nav.navbar-nav.pull-left
                li
                    a.btn.btn-md(href="/clients/new" ng-click="new()") New
            ul.nav.navbar-nav.pull-right
                li
                    input.form-control(ng-model="searchText", placeholder="Filter By Last Name")
                li
                    select.form-control(ng-model="sortOrder", ng-options="item.value as item.text for item in sortOptions")

    table.table.table-hover.table-condensed
        thead
            tr
                th Name
                th Date of Birth
                th Family Address
        tbody
            tr.selectable-row(ng-repeat="client in clients" ng-click="clientRowClick(client._id)")
                td
                    span {{client.lastName + ', ' + client.firstName}}
                td
                    span {{client.dateOfBirth | date}}
                td
                    span {{client.family.address1 + ', ' + client.family.city}}
    pagination.pagination-sm(total-items="pageTotalItems" items-per-page="itemsPerPage" ng-model="currentPage" max-size="pageMaxSize" boundary-links="true" rotate="false" num-pages="numPages" ng-change="pageChanged()")
