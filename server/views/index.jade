                ul.nav.navbar-nav
                    li.hidden-xs
                        a(href="/") Home
                    li.visible-xs(data-toggle="collapse" data-target="#main-navbar")
                        a(href="/") Home
                    li.hidden-xs
                        a(href="/families") Families
                    li.visible-xs(data-toggle="collapse" data-target="#main-navbar")
